{
  "name": "eez-studio-docker-build-tool",
  "version": "1.0.0",
  "description": "Docker-based build tool for EEZ Studio projects",
  "main": "src/main/loader.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "compile": "tsc --project tsconfig.build.json",
    "prebuild": "npm run compile",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "docker-build": "ts-node scripts/docker-build.ts"
  },
  "keywords": [
    "electron",
    "eez",
    "docker",
    "emscripten"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "png2icons": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.eez.studio.docker.build.tool",
    "productName": "EEZ Studio Docker Build Tool",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist/src/**/*",
      "dist/scripts/**/*",
      "src/renderer/**/*",
      "src/main/loader.js",
      "src/main/preload.js",
      "resources/docker-build/**/*",
      "package.json",
      "!dist/win-unpacked/**/*",
      "!dist/*.exe",
      "!dist/*.7z",
      "!dist/*.blockmap",
      "!dist/*.yml",
      "!dist/*.yaml"
    ],
    "extraResources": [
      {
        "from": "resources/docker-build",
        "to": "docker-build",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
