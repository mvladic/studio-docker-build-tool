{
  "name": "eez-studio-docker-build-tool",
  "version": "1.0.0",
  "description": "Docker-based build tool for EEZ Studio projects",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "eez",
    "docker",
    "emscripten"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "png2icons": "^2.0.1"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.eez.studio.docker.build.tool",
    "productName": "EEZ Studio Docker Build Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
